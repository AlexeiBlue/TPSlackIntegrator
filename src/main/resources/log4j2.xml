<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="DEBUG" monitorInterval="20">

	<Appenders>
		<RollingFile name="RollingFile" 
		             fileName="app.log" filePattern="%d{yyyy-MM-dd}-%i.log.gz" immediateFlush="false" append="true">
			<PatternLayout>
				<Pattern>%d{dd MMM HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n
				</Pattern>
			</PatternLayout>
			<Policies>
				<SizeBasedTriggeringPolicy size="100 MB" />
			</Policies>
			<DefaultRolloverStrategy max="5"/>
		</RollingFile>
		
	    <Console name="Console" target="SYSTEM_OUT">
	        <PatternLayout pattern="%d{dd MMM HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
	    </Console>
	</Appenders>

	<Loggers>
		<AsyncRoot level="debug">
			<AppenderRef ref="RollingFile" />
		</AsyncRoot>
	</Loggers>
	
</Configuration>